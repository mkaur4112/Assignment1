

import java.util.Scanner;

public class palindrome
{
	public static void main(String args[])
	{
		        System.out.println("Enter an Integer : ");
		        Scanner sc = new Scanner(System.in);  //use scanner class for reading next integer
		        int palindrome= sc.nextInt();         //make class object using scanner object and function
		       
		        if(Palindrome(palindrome))
		        {
		            System.out.println("Number : " + palindrome + " is a palindrome");
		        }
		        else
		        {
		            System.out.println("Number : " + palindrome + " is not a palindrome");
		        }       
		        
		    }
		    public static boolean Palindrome(int number)
		    {
		        int palindrome = number; // copied number into variable
		        int reverse = 0;
                while (palindrome != 0) 
                {
		            int remainder = palindrome % 10;
		            reverse = reverse * 10 + remainder;
		            palindrome = palindrome / 10;
		        }  
                // if original and reverse of number is equal means,number is palindrome in Java
		       if (number == reverse)
		        {
		            return true;
		        }
		        else
		        	return false;
		        }

	}


